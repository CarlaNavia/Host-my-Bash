<h3>BOOKING DETAILS</h3>

<div>
    <img src="{{reserva.planDetail.image}}" alt="reserva">
</div>
<div>
    <a href="/">Go back</a>
    <h3>{{reserva.planDetail.planName}}</h3>
    <h4>Description:{{reserva.planDetail.description}} </h4>
    <h5>Date: {{reserva.date}}</h5>
</div>


{{#if isUserLoggedIn }}


<form id='formGuest' action="/booking/{{reserva._id}}/{{reserva.date}}/{{reserva.people}}" method="post">

    <div class="guestForm hidden">
        <label for="name-input"> Attendee Name </label>
        <input type="text" name="attendeename" id="name-input" value="{{reserva.name}}">
        <label for="user -lastname-input"> Attendee 1 LastName </label>
        <input type="text" name="attendee1lastname" id="lastname-input" value="{{reserva.lastname}}">
        <label for="user-phone-input"> Attendee 1 Phone number </label>
        <input type="phone" name="attendee1phone" id="phone-input" placeholder=" Phone number">

    </div>

    {{#times reserva.inviting}}
    <div class="guestForm hidden">
        <label for="name-input"> Attendee Name </label>
        <input type="text" name="attendeename" id="name-input" placeholder="Attendee 1 Name">
        <label for="user -lastname-input"> Attendee 1 LastName </label>
        <input type="text" name="attendee1lastname" id="lastname-input" placeholder="Attendee 1 LastName">
        <label for="user-phone-input"> Attendee 1 Phone number </label>
        <input type="phone" name="attendee1phone" id="phone-input" placeholder="Attendee 1 Phone number">

    </div>
    {{/times}}


    <button type='submit'> BOOK! </button>
</form>
{{else}}
<h2>You must be logged in to Book a plan</h2>
<h4> If you don't have an account create one:</h4>
<li> <a href="/signup"> Sign Up </a> </li><br>
<h4> If you already have an account:</h4>
<li> <a href="/login"> Log In </a> </li>
{{/if}}

{{#if errorMessage}}
{{/if}}